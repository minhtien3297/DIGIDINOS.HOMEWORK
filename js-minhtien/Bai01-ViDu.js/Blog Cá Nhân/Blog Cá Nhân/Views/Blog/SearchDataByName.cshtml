@model BlogManager.Models.Blog

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Search Blogs</h2>

<script>
    function searchURL() {
        var search = document.getElementById("txtsearch").value;
        window.location = "SearchDataByName/" + search;
    }
</script>
<br />
<form>
    <div class="form-group row">
        <label for="txtsearch" class="col-sm-2 col-form-label">Tiêu đề</label>
        <div class="col-sm-10">
            <input type="text" id="txtsearch" placeholder="Tiêu đề" class="form-control" />
        </div>
        <input type="button" value="search" onclick="searchURL()" class="btn btn-success" style="margin:20px 0px 0px 12px" />
    </div>
</form>
<br />
<table class="table table-bordered">
    <tr>
        <th>
            ID
        </th>
        <th>
            Tin
        </th>
        <th>
            Loại
        </th>
        <th>
            Trạng thái
        </th>
        <th>
            Vị trí
        </th>
        <th>
            Ngày public
        </th>
        <th>
            Edit
        </th>
        <th>
            Delete
        </th>
    </tr>
    @foreach (var item in Model.ShowAllBlog)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BlogID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Condition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditBlog", new { id = item.BlogID }, new { @class = "btn btn-link" })

            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.BlogID }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }
</table>
