<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <title>@ViewBag.Title - My Blog</title>
</head>
<body>
    <div class="container">
        <div class="row my-3">
            <div class="col-lg-3">
                <div class="container">
                    <img class="mb-3" src="~/Photos/Logo.png" width="70" height="70" />
                </div>
                <div class="container">
                    <div class="btn-group-vertical w-100 h-25">
                        @Html.ActionLink("List", "ListBlogs", "Blog", new { @class = "btn btn-outline-dark rounded-0 font-weight-bold" })
                        @Html.ActionLink("New", "NewsEditBlog", "Blog", new { @class = "btn btn-outline-dark rounded-0 font-weight-bold" })
                        @Html.ActionLink("Search", "SearchBlog", "Blog", new { @class = "btn btn-outline-dark rounded-0 font-weight-bold" })
                        @Html.ActionLink("Edit", "NewsEditBlog", "Blog", new { @class = "btn btn-outline-dark rounded-0 font-weight-bold" })
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <h2>Blogs Management</h2>
                <br />
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
