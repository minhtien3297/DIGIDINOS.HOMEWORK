@model cvManagement.Models.EmailTemplate

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-12 d-flex justify-content-between" style="padding:0px">
    <h2>Create template</h2>
    @Html.ActionLink("Back To List", "ShowAllTemplates", null, new { @class = "btn btn-secondary w-10 btn btn-primary btn-lg" })
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <hr />
    <!--Name input-->
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <!--Content input-->
    <div class="form-group">
        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label" })
        @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @cols = 3, @rows = 6 })
        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
    </div>

    <!--Buttons-->
    <hr class="my-4">
    <div class="col-12" style="padding:0px">
        <input type="submit" value="Submit" class="w-10 btn btn-primary btn-lg" />
    </div>
</div>
}