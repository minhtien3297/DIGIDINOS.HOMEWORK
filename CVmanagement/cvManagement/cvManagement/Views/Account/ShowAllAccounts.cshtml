@model cvManagement.Models.Account
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl d-flex justify-content-between" style="margin-bottom:10px;">
    <h4>List account</h4>
    @Html.ActionLink("Create", "createAccount", "", new { @class = "w-10 btn btn-primary btn-lg" })
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                No.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                Delete
            </th>
            <th>
                Edit
            </th>
        </tr>
    </thead>
    <!--So dong-->
    @{ int rowNo = 0; }
    <!--Noi Dung-->
    @foreach (var item in Model.listAccount)
    {
<tr>
    <td>
        @(rowNo += 1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @{
            if (item.Role == 0)
            {
                @Html.Label("Human Resource")
            }
            else
            {
                @Html.Label("Interviewer")
            }
        }
    </td>
    <td>
        @{
            if (item.Id == Model.account.Id)
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "w-10 btn btn-danger btn-lg", onclick = "return confirm('Are you sure to delete this account?');" })
            }
        }
    </td>
    <td>
        @{
            if (item.Id == Model.account.Id)
            {
                @Html.ActionLink("Edit", "editAccount", new { id = item.Id }, new { @class = "w-10 btn btn-warning btn-lg", @style = "color:white" })
            }
        }
    </td>
</tr>
    }
</table>
<!--Script thong bao -->
@if (TempData["InsertResult"] != null)
{
    <script type="text/javascript">

        alert("Record Is Inserted Successfully");
    </script>

}
@if (TempData["UpdateResult"] != null)
{
    <script type="text/javascript">

        alert("Record Is Updated Successfully");
    </script>

}
@if (TempData["DeleteResult"] != null)
{
    <script type="text/javascript">

        alert("Record Is Deleted Successfully");
    </script>

}