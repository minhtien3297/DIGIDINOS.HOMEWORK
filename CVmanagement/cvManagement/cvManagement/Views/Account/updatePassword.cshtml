@model cvManagement.Models.Account

@{
    ViewBag.Title = "updatePassword";
}

<div class="col-12 d-flex justify-content-between" style="padding:0px">
    <h2>Update password</h2>
    @Html.ActionLink("Back To List", "ShowAllAccounts", null, new { @class = "btn btn-secondary w-10 btn btn-primary btn-lg" })
</div>
<hr class="my-4">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.PassWord)
    @Html.HiddenFor(model => model.Role)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <!--Password input-->
    <div class="form-group">
        @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Password("oldpassword", null, new { @class = "form-control" })
        </div>
    </div>

    <!--New password input-->
    <div class="form-group">
        @Html.Label("New Password", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Password("newpassword", null, new { @class = "form-control" })
        </div>
    </div>

    <!--New password again input-->
    <div class="form-group">
        @Html.Label("New Password Again", null, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Password("newpasswordagain", null, new { @class = "form-control" })
        </div>
    </div>

    <!--Buttons-->
    <hr class="my-4">
    <div class="col-12">
        <input type="submit" value="Submit" class="w-10 btn btn-primary btn-lg" />
    </div>
</div>
}